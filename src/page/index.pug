            li(data-slide-to="1", data-target="#careerCarousel")
          div(class="carousel-inner")
            div(class="carousel-item active")
              img(src="https://frisk.s3.ap-northeast-2.amazonaws.com/upload/a0c491be-7fcd-48f6-a5f0-e06d9ed0a84a", class="d-block w-100", alt="geminisoft", title="제머나이소프트, 클릭하여 상세 정보로 가기", onclick="location.href='./gemini.html'")
